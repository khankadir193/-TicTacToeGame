<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343e56"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343e56"
        >

        <ImageView
            android:id="@+id/buttonImage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_toLeftOf="@id/btn5"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_toRightOf="@id/btn5"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_below="@id/btn5"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_below="@id/btn5"
        android:layout_toRightOf="@+id/btn8"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_above="@id/btn5"
        android:background="#F69e78"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_below="@id/btn5"
        android:background="#F69e78"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69e78"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginRight="-14dp"
        />

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69e78"
        android:layout_toRightOf="@id/btn5"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-14dp"
        />


    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple_200"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Reset"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/scorex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/aldrich"
            android:text="Score X :- 0"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/scorey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Y :- 0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/aldrich"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_above="@id/btn5"
        android:layout_toLeftOf="@id/btn2"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#343e56"
        android:layout_above="@id/btn5"
        android:layout_toRightOf="@id/btn2"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/buttonImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

</RelativeLayout>